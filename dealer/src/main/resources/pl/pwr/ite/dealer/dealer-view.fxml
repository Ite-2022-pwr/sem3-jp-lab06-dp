<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.text.Font?>
<VBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="pl.pwr.ite.dealer.view.controller.DealerController">
  <padding>
    <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
  </padding>
  <HBox alignment="CENTER_LEFT" prefHeight="50.0" prefWidth="200.0">
    <Label text="Host: ">
      <padding>
        <Insets left="10.0" />
      </padding>
    </Label>
    <TextField fx:id="hostTextField" text="localhost">
      <HBox.margin>
        <Insets />
      </HBox.margin>
    </TextField>
    <Label text="Port: ">
      <HBox.margin>
        <Insets left="10.0" />
      </HBox.margin>
    </Label>
    <TextField fx:id="portTextField" />
    <Button fx:id="warehouseConnectButton" mnemonicParsing="false" onAction="#warehouseConnectButtonClick" text="Connect to warehouse">
      <font>
        <Font size="16.0" />
      </font>
      <HBox.margin>
        <Insets left="20.0" />
      </HBox.margin>
    </Button>
  </HBox>
</VBox>
